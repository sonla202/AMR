        </link>

        <link name="imu_link">
            <visual>
                <geometry>
                    <sphere radius="0.010" />
                </geometry>
                <origin xyz="0 0 0" rpy="0 0 0" />
                <material name="imu_color">
                    <color rgba="1 1 0 1" />
                </material>
            </visual>
        </link>

        <joint name="camera2base" type="fixed">
            <origin xyz="0.087 0 0.07" rpy="0 0 0"/>
            <parent link="base_link" />
            <child  link="camera_link" />
        </joint>

        <joint name="baselink2footprint" type="fixed">
            <origin xyz="0 0 0.101" rpy="0 0 0"/>
            <parent link="base_footprint" />
            <child  link="base_link" />
        </joint>

        <joint name="left_wheel_joint" type="fixed">
            <origin xyz="0.0 0.09 -0.06" rpy="1.57 3.14 3.14"/>
            <parent link="base_link" />
            <child  link="left_wheel" />
        </joint>

        <joint name="right_wheel_joint" type="fixed">
            <origin xyz="0.0 -0.09 -0.06" rpy="1.57 3.14 3.14"/>
            <parent link="base_link" />
            <child  link="right_wheel" />
        </joint>

        <joint name="laser2base" type="fixed">
            <origin xyz="0 0 0.1" rpy="0 0 0"/>
            <parent link="base_link" />
            <child  link="laser" />
        </joint>

        <joint name="imu2base" type="fixed">
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <parent link="base_link" />
            <child  link="imu_link" />
