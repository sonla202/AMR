            </visual>
        </link>  

        <link name="right_wheel">
            <visual>
                <geometry>
                    <mesh filename="file:///home/vozer/dev_ws/src/articubot_one/meshes/wheel_right.stl" scale="0.001 0.001 0.001" />
                </geometry>
                <origin xyz="0.29 0.0615 0.17" rpy="0 1.57 0" />
                <material name="wheel_color">
                    <color rgba="0.1 0.1 0.1 1" />
                </material>
