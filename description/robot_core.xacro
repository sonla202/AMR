<?xml version="1.0" encoding="utf-8"?>

<robot name="tarkbot_robot" xmlns:xacro="http://ros.org/wiki/xacro">

    <xacro:macro name="tarkbot_robot" params="">

        <link name="base_footprint">
            <visual>
                <geometry>
                    <sphere radius="0.001" />
                </geometry>
            </visual>
        </link>

        <link name="base_link">
